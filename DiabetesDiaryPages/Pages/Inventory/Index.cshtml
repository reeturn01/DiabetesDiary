@page
@model DiabetesDiaryPages.Pages.Inventory.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="AddItem">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItems[0].MedicalItemType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItems[0].MedicalItemManufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItems[0].MedicalItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItems[0].InsulinType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItems[0].ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItems[0].Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.InventoryItems) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalItemType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalItemManufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsulinType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
        </tr>
}
    </tbody>
</table>
