@page
@model DiabetesDiaryPages.Pages.Inventory.AddItemModel
@{
}

<h1>Add medical item to inventory</h1>

<h4>Medical item</h4>
<hr />
<div class="row">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <div class="col-md-5">
                <label asp-for="Item.MedicalItemId" class="control-label"></label>
                <select asp-for="Item.MedicalItemId" asp-items="Model.MedicalSelectListItems" class="form-control">
                    <option selected="selected" disabled="disabled">-- Izberi medikament --</option>
                </select>
                <span asp-validation-for="Item.MedicalItemId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <label asp-for="Item.ExpirationDate" class="control-label"></label>
                <input asp-for="Item.ExpirationDate" class="form-control" />
                <span asp-validation-for="Item.ExpirationDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <label asp-for="Item.Quantity" class="control-label"></label>
                <input asp-for="Item.Quantity" class="form-control" />
                <span asp-validation-for="Item.Quantity" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

