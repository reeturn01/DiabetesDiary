@model DiabetesDiaryPages.Pages.Food.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_DoctorLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].GlicemicIndex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Proteins)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Carbohydrates)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Sugars)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Fat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].PrepType)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Food) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GlicemicIndex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proteins)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carbohydrates)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sugars)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrepType)
            </td>
        </tr>
}
    </tbody>
</table>
